{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6", "es2019"],
    "allowJs": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "./lib/**/*"
  ]
}
